// EC4X Espionage Configuration v0.2
// Source: docs/specs/09-intel-espionage.md
// Defines costs, effects, and detection mechanics for the espionage system.

// --- Budget Point Costs ---
pointCosts {
    (docs)"docs/specs/09-intel-espionage.md#section-9-2"
    // Also see: docs/specs/09-intel-espionage.md#section-9-3
    ebpCostPp 40 // Cost in PP to generate one Espionage Budget Point (EBP)
    cipCostPp 40 // Cost in PP to generate one Counter-Intelligence Point (CIP)
}

// --- Action Costs & Effects ---
actions {
    (docs)"docs/specs/09-intel-espionage.md#section-9-2-1"
    techTheft {
        ebpCost 5
        effect "Steals 10 SRP from the target's research pool."
        srpStolen 10
    }
    sabotageLowImpact {
        ebpCost 2
        effect "Reduces target's 1d6 Industrial Units (IU)."
        iuDamageDice "1d6"
    }
    sabotageHighImpact {
        ebpCost 7
        effect "Reduces target's 1d20 Industrial Units (IU)."
        iuDamageDice "1d20"
    }
    assassination {
        ebpCost 10
        effect "Reduces target's SRP gain by 50% for one turn."
        srpGainReduction 0.50
        durationTurns 1
    }
    cyberAttack {
        ebpCost 6
        effect "Cripples the target's Starbase."
    }
    economicManipulation {
        ebpCost 6
        effect "Halves target's Net Colony Value (NCV) for one turn."
        ncvReduction 0.50
        durationTurns 1
    }
    psyopsCampaign {
        ebpCost 3
        effect "Reduces target's tax revenue by 25% for one turn."
        taxRevenueReduction 0.25
        durationTurns 1
    }
    counterIntelligenceSweep {
        ebpCost 4
        effect "Blocks enemy intelligence gathering for 1 turn."
        intelBlockDurationTurns 1
    }
    intelligenceTheft {
        ebpCost 8
        effect "Steals target's entire intelligence database."
    }
    plantDisinformation {
        ebpCost 6
        effect "Corrupts target's intel with 20-40% variance for 2 turns."
        disinformationDurationTurns 2
        minVariance 0.20
        maxVariance 0.40
    }
}

// --- Detection Mechanics ---
detection {
    (docs)"docs/specs/09-intel-espionage.md#section-9-3"
    cipConsumedPerRoll 1

    // d20 roll must be > threshold
    thresholds {
        cic1 15
        cic2 12
        cic3 10
        cic4 7
        cic5 4
    }

    // Modifier added to d20 roll based on total CIP banked
    modifiers {
        tier "1-5" { modifier 1 }
        tier "6-10" { modifier 2 }
        tier "11-15" { modifier 3 }
        tier "16-20" { modifier 4 }
        tier "21+" { modifier 5 }
    }
}
