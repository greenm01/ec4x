// EC4X Gameplay Configuration
// Core gameplay mechanics and thresholds
// Source: docs/specs/gameplay.md Section 1.4
// NOTE: Starting tech levels are defined in config/tech.kdl [starting_tech]

elimination {
    (docs)"docs/specs/01-gameplay.md#section-1-4-1"
    // Player elimination thresholds
    defensiveCollapseTurns 3        // Turns below 0 prestige before elimination
    defensiveCollapseThreshold 0    // Prestige threshold (below this = collapse risk)
}

autopilot {
    (docs)"docs/specs/01-gameplay.md#section-1-4-2"
    // Autopilot (MIA) activation rules
    miaTurnsThreshold 3             // Consecutive missed turns before autopilot
}

autopilotBehavior {
    (docs)"docs/specs/01-gameplay.md#section-1-4-2"
    continueStandingOrders #true      // Fleets continue existing orders
    patrolHomeSystems #true           // Idle fleets patrol/defend home
    maintainEconomy #true             // Continue tax/R&D at current rates
    defensiveConstruction #true       // Build defensive infrastructure
    noOffensiveOps #true              // No new attacks or colonization
    maintainDiplomacy #true           // Diplomatic stances unchanged
}

defensiveCollapseBehavior {
    (docs)"docs/specs/01-gameplay.md#section-1-4-1"
    retreatToHome #true              // All fleets return to controlled systems
    defendOnly #true                 // Defend against Enemy-status houses
    noConstruction #true             // No new build orders
    noDiplomacyChanges #true         // Cannot change diplomatic status
    economyCeases #true              // No income, R&D, or maintenance
    permanentElimination #true       // Cannot rejoin game
}