// ============================================================================
// SHIP STATUS MANAGEMENT
// ============================================================================
shipStatus {
    (docs)"docs/specs/02-assets.md#section-2-3-3-5"

    active {
        c2CostMultiplier 1.00      // 100% C2 cost
        maintenanceMultiplier 1.00      // 100% maintenance cost
        reactivationTurns 0             // Already active
    }

    reserve {
        c2CostMultiplier 0.50      // 50% C2 cost
        maintenanceMultiplier 0.50      // 50% maintenance cost
        reactivationTurns 1             // 1 turn to reactivate to Active
    }

    mothballed {
        c2CostMultiplier 0.00      // 0% C2 cost (no C2 consumed)
        maintenanceMultiplier 0.10      // 10% maintenance cost
        reactivationTurns 3             // 3 turns to reactivate to Active
    }
}

// --- Salvage Configuration ---
salvage {
    (docs)"docs/specs/05-construction.md#salvage"
    salvageValueMultiplier 0.5          // 50% of build cost (PC recovery)
}
