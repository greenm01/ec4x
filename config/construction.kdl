// EC4X Construction Configuration v0.3
// Source: docs/specs/02-assets.md, docs/specs/03-economy.md
// This file defines GLOBAL rules, times, and modifiers for construction and repair.
// Individual unit/facility stats are in ships.kdl, ground_units.kdl, and facilities.kdl.

// --- Global Modifiers ---
constructionModifiers {
    (docs)"docs/specs/02-assets.md#section-2-3-2-1"
    planetsideShipCostMultiplier 2.0 // +100% PC for planet-side ship construction
}

// --- Global Build Times (in turns) ---
buildTimes {
    (docs)"docs/specs/10-reference.md#section-10-1-1"
    ship 1 // All ships build in 1 turn
    fighterSquadron 1
    army 1
    marine 1
    groundBattery 1
    planetaryShield 1
    spaceport 1
    shipyard 2
    drydock 2
    starbase 3
}

// --- Global Repair Mechanics ---
repair {
    (docs)"docs/specs/02-assets.md#section-2-3-2-3"
    // Also see: docs/specs/02-assets.md#section-2-4-4
    shipRepairTurns 1
    shipRepairCostMultiplier 0.25
    starbaseRepairTurns 1
    starbaseRepairCostMultiplier 0.25
    starbaseRepairRequires "Spaceport"
    starbaseRepairUsesDockCapacity false
}
