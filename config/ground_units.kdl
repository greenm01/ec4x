// EC4X Ground Units Configuration v0.2
// Source: docs/specs/01-gameplay.md (Phase F Balance), docs/specs/10-reference.md
// Defines the base statistics for all ground units and planetary defenses.

groundUnits {
    army {
        (docs)"docs/specs/10-reference.md#102-ground-units-wep1"
        buildCost 10 // Phase F Balance
        maintenancePercent 0.02 // 2%
        minCST 1
        attackStrength 3
        defenseStrength 5
    }
    marine {
        (docs)"docs/specs/10-reference.md#102-ground-units-wep1"
        buildCost 17 // Phase F Balance
        maintenancePercent 0.02 // 2%
        minCST 1
        attackStrength 6
        defenseStrength 6
        requiresTransport true
    }
    groundBattery {
        (docs)"docs/specs/10-reference.md#102-ground-units-wep1"
        buildCost 13 // Phase F Balance
        maintenancePercent 0.03 // 3%
        minCST 1
        attackStrength 10
        defenseStrength 8
    }
    planetaryShield {
        (docs)"docs/specs/10-reference.md#102-ground-units-wep1"
        // Also see: docs/specs/07-combat.md#section-7-5-2 (bombardment mechanics)
        buildCost 50 // Phase F Balance (for SLD I)
        maintenancePercent 0.05 // 5%
        minCST 5 // Corresponds to SLD tech, but CST is the gate
        defenseStrength 100 // Base DS - TECH-DRIVEN bonuses in tech.kdl shieldsTech
        // Tech.kdl shieldDs values (10-60) ADD to this base per shield tech level
        // Tech.kdl also defines d20 thresholds and hit blocking percentages
        maxPerColony 1
        replaceOnUpgrade true
    }
}
