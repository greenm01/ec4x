# Copy to scripts/bot/multi_session.env and fill values.

BOT_RELAYS="ws://localhost:8080"
BOT_GAME_ID="replace-with-game-id"
BOT_DAEMON_PUBHEX="replace-with-daemon-pubhex"

# Shared LLM/provider settings
BOT_BASE_URL="https://api.openai.com/v1"
BOT_API_KEY="replace-with-api-key"
BOT_MODEL_DEFAULT="gpt-4o-mini"

# Runtime tuning
BOT_MAX_RETRIES=2
BOT_REQUEST_TIMEOUT_SEC=45
BOT_LOG_ROOT="logs/bot/multi"

# Optional process orchestration
BOT_START_RELAY=0
BOT_START_DAEMON=0
BOT_RELAY_BIN="/path/to/nostr-rs-relay"
BOT_RELAY_CONFIG="/path/to/relay-config.toml"
BOT_DAEMON_BIN="bin/ec4x-daemon"

# Optional reproducibility metadata
BOT_SEED=""
BOT_CONFIG_HASH=""

# Number of bots to launch
BOT_COUNT=2

# Bot 1 identity/model
BOT_1_PLAYER_PRIV_HEX="replace-with-bot1-private-key-hex"
BOT_1_PLAYER_PUB_HEX="replace-with-bot1-public-key-hex"
BOT_1_MODEL="gpt-4o-mini"

# Bot 2 identity/model
BOT_2_PLAYER_PRIV_HEX="replace-with-bot2-private-key-hex"
BOT_2_PLAYER_PUB_HEX="replace-with-bot2-public-key-hex"
BOT_2_MODEL="gpt-4o-mini"
