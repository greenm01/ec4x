# Copy to scripts/bot/session.env and fill values.

BOT_RELAYS="ws://localhost:8080"
BOT_GAME_ID="replace-with-game-id"
BOT_DAEMON_PUBHEX="replace-with-daemon-pubhex"

# Optional process orchestration
BOT_START_RELAY=0
BOT_START_DAEMON=0
BOT_RELAY_BIN="/path/to/nostr-rs-relay"
BOT_RELAY_CONFIG="/path/to/relay-config.toml"
BOT_DAEMON_BIN="bin/ec4x-daemon"

# Bot identity (nostr keypair)
BOT_PLAYER_PRIV_HEX="replace-with-bot-private-key-hex"
BOT_PLAYER_PUB_HEX="replace-with-bot-public-key-hex"

# LLM settings (OpenAI-compatible endpoint)
BOT_BASE_URL="https://api.openai.com/v1"
BOT_MODEL="gpt-4o-mini"
BOT_API_KEY="replace-with-api-key"

# Runtime tuning
BOT_MAX_RETRIES=2
BOT_REQUEST_TIMEOUT_SEC=45

# Trace/log conventions
BOT_LOG_DIR="logs/bot"
