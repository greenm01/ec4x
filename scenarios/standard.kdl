// EC4X Standard Scenario Configuration
// This is the canonical game setup matching docs/specs/gameplay.md Section 1.2
//
// Moderators can create custom scenarios by copying this file and adjusting values.
// The game engine loads: config/*.kdl (balance/mechanics) + scenarios/*.kdl (scenario)

gameParameters {
    (docs)"docs/specs/01-gameplay.md#section-1-2"
    scenarioName "Standard 4-Player"
    scenarioDescription "Classic balanced 4-player start with standard resources"
    playerCount 4
    theme "dune"                    // Themes defined in game configs
    //gameSeed 99999                // Set a custom seed for reproducible game states
}

// Map generation parameters
mapGeneration {
    (docs)"docs/specs/02-assets.md#section-2-1"
    numRings 4                      // 2-12 valid (absolute bounds), determines map size
                                     // 4 rings = 61 systems, ~15 systems per player for 4 players
                                     // See docs/guides/map-sizing-guide.md for systems-per-player table
}

victoryConditions {
    (docs)"docs/specs/01-gameplay.md#section-1-1"
    // Victory conditions:
    // - Turn limit reached: Highest prestige wins
    // - All enemy colonies captured: Military victory
    // - Last-stand rule: Houses with marines/transports can recapture colonies
    turnLimit 35                     // Max number of game turns
    // No hard prestige limit - prestige scales dynamically with map size
    finalConflictAutoEnemy #true     // Final 2 players forced to Enemy status
}

startingResources {
    (docs)"docs/specs/01-gameplay.md#section-1-2"
    treasury 1000                    // Starting Production Points (PP)
    startingPrestige 100             // Starting prestige points
    defaultTaxRate 0.50              // Default tax rate (50%)
}

startingTech {
    (docs)"docs/specs/01-gameplay.md#section-1-2"
    // Initial technology levels - all start at level 1
    economicLevel 1
    scienceLevel 1
    weaponsTech 1
    constructionTech 1
    shieldsTech 1
    terraformingTech 1
    electronicIntelligenceTech 1
    cloakingTech 1
    strategicLiftTech 1
    flagshipCommandTech 1
    strategicCommandTech 1
    fighterDoctrineTech 1
    advancedCarrierOpsTech 1
}

// Initial fleet composition per Esterian Conquest v1.5 - 4 fleets total:
// - 2 colonization fleets (ETAC + Light Cruiser, each ETAC with 3 PTU)
// - 2 scout fleets (Destroyer each)
// - All fleets start with guard-blockade orders on homeworld

startingFleets {
    (docs)"docs/specs/01-gameplay.md#section-1-2"
    fleet {
        ships "ETAC" "LightCruiser"
    }
    fleet {
        ships "ETAC" "LightCruiser"
    }
    fleet {
        ships "Destroyer"
    }
    fleet {
        ships "Destroyer"
    }
}

startingFacilities {
    (docs)"docs/specs/01-gameplay.md#section-1-2"
    spaceports 1
    shipyards 1
    drydocks 1
}

startingGroundForces {
    (docs)"docs/specs/01-gameplay.md#section-1-2"
    armies 10
    marines 5
    groundBatteries 5
    planetaryShields 0
}

homeworld {
    (docs)"docs/specs/01-gameplay.md#section-1-2"
    planetClass "Eden"
    rawQuality "Abundant"
    colonyLevel 5
    populationUnits 840
    industrialUnits 420
}

optionalBalanceOverrides {
    // Moderator can override specific balance values for this scenario only
    // Examples (commented out by default):
    // naturalGrowthRate 0.03        // 3% instead of 2% for faster game
    // researchBreakthroughBaseChance 0.15  // 15% instead of 10%
    // blockadeProductionPenalty 0.80  // Harsher blockades (80% instead of 60%)
}
